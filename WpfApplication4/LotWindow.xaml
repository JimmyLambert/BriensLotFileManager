<Window x:Class="WpfApplication4.LotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LotWindow" Height="400" Width="400">
	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Menu Grid.ColumnSpan="2" Grid.Row="0">
			<MenuItem Header="File">
				<MenuItem Header="Add...">
					<MenuItem x:Name="AddLotButton" Header="Lot Button" Click="AddLotButton_Click"/>
				</MenuItem>
			</MenuItem>
		</Menu>
		<StackPanel x:Name="LotButtonStackPanel" Grid.Column="0" Grid.Row="1">
			<Button Content="SampleButton"/>
			<Button Content="SimpleButton;)"/>
			
			
		</StackPanel>
		<WebBrowser Grid.Column="1" Grid.Row="1" Source="C:\Users\Developer\Desktop\This is a purchase order.pdf"></WebBrowser>
	</Grid>
</Window>
